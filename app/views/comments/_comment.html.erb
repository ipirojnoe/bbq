<div class="mt-5">
  <div class="row d-flex">
    <div class="col-md-8">
      <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center">
          <div class="user d-flex flex-row align-items-center"> 
            <span>
              <small class="font-weight-bold text-primary">
                <% if comment.user.present? %>
                  <%= render partial: 'users/user', object: comment.user %>
                <% else %>
                  <em><strong><%= comment.user_name %></strong></em>
                <% end %>
              </small> 
              <small class="font-weight-bold"><%= comment.body %></small>
            </span>
          </div>
          <small><%= l comment.created_at, format: :short %></small>
        </div>
        <div class="action d-flex justify-content-between align-items-center">
          <div class="reply">
            <small>
            <% if current_user_can_edit?(comment) %>
              <%= link_to(
                    t('comments.comment.delete'), event_comment_path(comment.event, comment),
                    method: :delete, data: {confirm: t('form.delete.confirm')}
                  ) %>
            <% end %>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
