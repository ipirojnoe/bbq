<div class="mt-3">
  <div class="row d-flex">
    <div class="col-md-12">
      <div class="card p-4">
        <div class="d-flex justify-content-between align-items-center">
          <div class="user d-flex flex-row align-items-center"> 
            <span>
              <small class="font-weight-bold text-primary">
                <% if comment.user.present? %>
                  <%= render partial: 'users/user', object: comment.user %>
                <% else %>
                  <span class="user-avatar">
                    <%= image_tag(user_avatar, class: 'img-icon') %>
                  </span>
                  <span class="user-name"><%= comment.user_name %></span>
                <% end %>
              </small> 
              <small class="font-weight-bold"><%= comment.body %></small>
            </span>
          </div>
          <div>
            <div class="action d-flex justify-content-end align-items-center">
              <div class="reply">
                <small>
                <% if current_user_can_edit?(comment) %>
                  <%= link_to(
                        fa_icon('fas fa-trash'), event_comment_path(comment.event, comment),
                        method: :delete, data: {confirm: t('form.delete.confirm')}
                      ) %>
                <% end %>
                </small>
              </div>
            </div>
            <small><%= l comment.created_at, format: :short %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
