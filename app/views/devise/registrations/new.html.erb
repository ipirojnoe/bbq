<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="card text-center">
          <header class="card-header">
            <h4 class="card-title mt-2">Регистрация</h4>
          </header>
          <article class="card-body">
          <form>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, "Пароль" %>
              <% if @minimum_password_length %>
              <em>(Минимум <%= @minimum_password_length %> символов)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Подтверждение пароля" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
              <div class="form-group">
                  <%= f.submit "Зарегистрироваться", class: "btn btn-primary btn-block" %>
              </div>                                         
          </form>
          </article>
          <div class="border-top card-body">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
