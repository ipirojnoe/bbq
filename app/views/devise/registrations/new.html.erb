<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <header class="card-header">
          <h4 class="card-title mt-2"><%= t('form.register.title') %></h4>
        </header>
        <article class="card-body">     
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, t('form.password') %>
            <% if @minimum_password_length %>
            <em><%= t ('form.minimun_password_length'), count: @minimum_password_length %></em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t('form.confirm_password') %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
              <%= f.submit t('form.register.button'), class: "btn btn-primary btn-block" %>
          </div>                                         
        <% end %>
        </article>
        <div class="border-top card-body">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
