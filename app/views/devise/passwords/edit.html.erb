<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <header class="card-header">
          <h4 class="card-title mt-2"><%= t('devise.passwords.cgange.title') %></h4>
        </header>
        <article class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('form.new_password') %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, t('form.confirm_password') %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
              <%= f.submit t('form.change_password'), class: "btn btn-primary btn-block" %>
          </div>                                         
        <% end %>
        </article>
      </div>
    </div>
  </div>
</div>

