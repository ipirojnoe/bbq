<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title, t('events.form.title') %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, t('events.form.address') %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime, t('events.form.time') %>
    <p> 
      <%= f.text_field :datetime,
                        class: 'form-control datepicker-here',
                        data: { 
                          timepicker: 'true',
                          'date-format': 'dd.mm.yyyy',
                          'time-format':  'hh:ii'
                        }
      %>
    </p>
  </div>

  <div class="form-group">
    <%= f.label :description, t('events.form.description') %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode, t('events.form.pincode') %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('general.save'), class: 'btn btn-primary' %>
    <%= t('general.or') %> <%= link_to t('general.return'), :back %>
  </div>
<% end %>
