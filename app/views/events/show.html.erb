<div class="event">
  <div class="event-info">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
        style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row padding-both">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}", target: '_blank'  %></small></h3>
            <p><%= @event.description %></p>
          </div>
          <% if current_user_can_edit?(@event) %>
          <div class="buffer-top">
            <%= link_to t('general.edit'), edit_event_path(@event), class: 'btn btn-primary' %>
            <%= link_to t('general.delete.button_title'), @event, method: :delete, class: 'btn btn-danger buffer-left', data: 
                { confirm: t('general.delete.confirm') } %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
