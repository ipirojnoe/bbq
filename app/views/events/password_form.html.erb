<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <header class="card-header">
          <h4 class="card-title mt-2"><%= t('events.show.pincode.title') %></h4>
        </header>
        <article class="card-body">
        <%= form_tag('', method: 'post') do |f| %>

          <div class="form-group">
            <%= label :pincode, t('form.pincode') %>
            <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
          </div>

          <div class="form-group">
              <%= submit_tag t('form.send_button'), class: "btn btn-primary btn-block"  %>
          </div>                                         
        <% end %>
        </article>
        <div class="border-top card-body">
          <%= link_to 'На главную', events_path %>
        </div>
      </div>
    </div>
  </div>
</div>

